<launch>
    <arg name="robot_name" default="Quadrotor"/>

    <group>
        <push-ros-namespace namespace="$(var robot_name)"/>

        <node
            name="estimator_node"
            pkg="state_estimation"
            exec="estimator"
            output="screen">
        </node>

        <node
            name="detector_node"
            pkg="state_estimation"
            exec="detector"
            output="screen">
        </node>
    </group>
</launch>

